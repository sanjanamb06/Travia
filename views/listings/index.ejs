  background: white;
  border-radius: 32px;
  box-shadow: 0 16px 32px rgba(0,0,0,0.15);
  padding: 8px;
  max-width: 850px;
  margin: 0 auto;
}

.search-tabs {
  display: flex;
  gap: 8px;
  padding: 8px 16px;
  border-bottom: 1px solid var(--airbnb-border);
  margin-bottom: 8px;
}

.search-tab {
  background: none;
  border: none;
  padding: 12px 16px;
  border-radius: 20px;
  font-weight: 600;
  color: var(--airbnb-gray);
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 8px;
}

.search-tab.active {
  background: var(--airbnb-light-gray);
  color: var(--airbnb-black);
}

.search-inputs-container {
  position: relative;
}

.search-input-group {
  display: flex;
  align-items: center;
  position: relative;
}

.search-input {
  flex: 1;
  padding: 16px 24px;
  border: none;
  background: transparent;
  position: relative;
}

.search-input:hover {
  background: var(--airbnb-light-gray);
  border-radius: 20px;
}

.search-input label {
  font-size: 12px;
  font-weight: 600;
  color: var(--airbnb-black);
  display: block;
  margin-bottom: 4px;
}

.search-input input {
  border: none;
  background: none;
  font-size: 14px;
  color: var(--airbnb-gray);
  width: 100%;
  outline: none;
}

.search-input input::placeholder {
  color: var(--airbnb-gray);
}

.search-divider {
  width: 1px;
  height: 32px;
  background: var(--airbnb-border);
}

.airbnb-search-button {
  background: var(--airbnb-red);
  border: none;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  color: white;
  font-size: 16px;
  margin: 8px;
  cursor: pointer;
  transition: background-color 0.2s ease;
  flex-shrink: 0;
}

.airbnb-search-button:hover {
  background: var(--airbnb-red-dark);
}

/* Filters Section */
.airbnb-filters-section {
  background: white;
  border-bottom: 1px solid var(--airbnb-border);
  padding: 20px 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filters-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

