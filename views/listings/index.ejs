  background: var(--airbnb-red);
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  font-size: 14px;
  transition: background-color 0.2s ease;
}

.btn-airbnb-primary:hover {
  background: var(--airbnb-red-dark);
  color: white;
  text-decoration: none;
}

.btn-airbnb-secondary {
  background: none;
  color: var(--airbnb-black);
  border: 1px solid var(--airbnb-black);
  padding: 12px 24px;
  border-radius: 8px;
  font-weight: 600;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.btn-airbnb-secondary:hover {
  background: var(--airbnb-light-gray);
}

