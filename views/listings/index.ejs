<% layout('/layouts/boilerplate') -%> 
<body>

  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){%>
    <a href="/listings/<%= listing._id %>" style="text-decoration: none">
      <div class="card col listing-card" style="width: 20rem">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="..."
          style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text">
            <br />
            <b><%= listing.title %> </b><br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
          </p>
        </div>
      </div></a
    >

    <%}%>
  </div>
</body>
