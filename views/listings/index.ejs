  .airbnb-hero-section {
    padding: 40px 0 60px 0;
    margin: -20px -15px 0 -15px;
  }
  
  .hero-title {
    font-size: 2rem;
  }
  
  .hero-subtitle {
    font-size: 1rem;
  }
  
  .search-input-group {
    flex-direction: column;
    gap: 0;
  }
  
  .search-divider {
    width: 100%;
    height: 1px;
  }
  
  .airbnb-listings-grid {
    grid-template-columns: 1fr;
    gap: 32px;
  }
  
  .results-header {
    flex-direction: column;
    align-items: flex-start;
