<% layout('/layouts/boilerplate') -%>
<div class="row">
  <h2 class="mt-2 col-6 offset-1">Login</h2>
  <div class="col-8 offset-2">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>


      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-dark" style="background-color: red">Submit</button>
    </form>
  </div>
</div>
