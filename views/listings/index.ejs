  border-radius: 12px;
  font-size: 14px;
  font-weight: 500;
  color: var(--airbnb-black);
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 8px;
  margin-left: 16px;
