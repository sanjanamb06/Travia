<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h2>Edit your Listing</h2>
    <form
      action="/listings/<%= showListing._id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%= showListing.title %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title required</div>
      </div>
      <br />
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image </label>
        <input name="listing[image]" type="file" class="form-control" />
      </div>
      <br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          required
        >
<%= showListing.description %> </textarea
        >
        <div class="invalid-feedback">Description required</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            value="<%= showListing.price %>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price required</div>
        </div>
        <br />
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>

          <input
            name="listing[country]"
            value="<%= showListing.country %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country required</div>
        </div>
      </div>
      <br />
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          value="<%= showListing.location %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location required</div>
      </div>
      <br />
      <button class="btn btn-dark" style="background-color: red">Edit</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
