<% layout('/layouts/boilerplate') -%> 

<!-- Airbnb-Style Hero Search Section -->
<div class="airbnb-hero-section">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Find your next stay</h1>
      <p class="hero-subtitle">Search low prices on hotels, homes and much more...</p>
      
      <!-- Main Airbnb-Style Search Bar -->
      <div class="airbnb-search-bar">
        <form action="/listings" method="GET" class="search-form">
          <div class="search-tabs">
            <button type="button" class="search-tab active" data-tab="stays">
              <i class="fas fa-bed"></i>
              Stays
            </button>
            <button type="button" class="search-tab" data-tab="experiences">
              <i class="fas fa-camera"></i>
              Experiences
            </button>
          </div>
          
          <div class="search-inputs-container">
            <div class="search-input-group">
              <div class="search-input where-input">
                <label>Where</label>
                <input 
                  type="text" 
                  name="search" 
                  placeholder="Search destinations" 
                  value="<%= searchParams.search || '' %>"
                >
              </div>
              
              <div class="search-divider"></div>
              
              <div class="search-input checkin-input">
                <label>Check in</label>
                <input 
                  type="date" 
                  name="checkin" 
                  placeholder="Add dates"
                  value="<%= searchParams.checkin || '' %>"
                >
              </div>
              
              <div class="search-divider"></div>
              
              <div class="search-input checkout-input">
                <label>Check out</label>
                <input 
                  type="date" 
                  name="checkout" 
                  placeholder="Add dates"
                  value="<%= searchParams.checkout || '' %>"
                >
              </div>
              
              <div class="search-divider"></div>
              
              <div class="search-input guests-input">
                <label>Who</label>
                <input 
                  type="number" 
                  name="guests" 
                  placeholder="Add guests"
                  min="1"
                  value="<%= searchParams.guests || '' %>"
                >
              </div>
              
              <button type="submit" class="airbnb-search-button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<!-- Airbnb-Style Filters Bar -->
<div class="airbnb-filters-section">
  <div class="container">
    <div class="filters-container">
      <div class="filter-tabs">
        <button class="filter-chip active" data-filter="all">
          <i class="fas fa-home"></i>
          All homes
        </button>
        <button class="filter-chip" data-filter="apartment">
          <i class="fas fa-building"></i>
          Apartments
        </button>
        <button class="filter-chip" data-filter="house">
          <i class="fas fa-home"></i>
          Houses
        </button>
        <button class="filter-chip" data-filter="villa">
          <i class="fas fa-chess-rook"></i>
          Villas
        </button>
        <button class="filter-chip" data-filter="cabin">
          <i class="fas fa-tree"></i>
          Cabins
        </button>
        <button class="filter-chip" data-filter="hotel">
          <i class="fas fa-bed"></i>
          Hotels
        </button>
      </div>
      
      <button class="filters-button" onclick="toggleAdvancedFilters()">
        <i class="fas fa-sliders-h"></i>
        Filters
      </button>
    </div>
  </div>
</div>

<!-- Advanced Filters Modal/Dropdown -->
<div class="advanced-filters-panel" id="advancedFilters" style="display: none;">
  <div class="container">
    <div class="filters-panel-content">
      <form action="/listings" method="GET" class="advanced-filters-form">
        <div class="row g-4">
          <!-- Price Range -->
          <div class="col-md-6">
            <h6 class="filter-section-title">Price range</h6>
            <div class="price-range-container">
              <div class="price-inputs">
                <div class="price-input-group">
                  <label>Minimum</label>
                  <input 
                    type="number" 
                    name="minPrice" 
                    placeholder="₹0" 
                    value="<%= searchParams.minPrice || '' %>"
                  >
                </div>
                <div class="price-separator">-</div>
                <div class="price-input-group">
                  <label>Maximum</label>
                  <input 
                    type="number" 
                    name="maxPrice" 
                    placeholder="₹50000+" 
                    value="<%= searchParams.maxPrice || '' %>"
                  >
                </div>
              </div>
            </div>
          </div>
          
          <!-- Country Filter -->
          <div class="col-md-6">
            <h6 class="filter-section-title">Location</h6>
            <select class="airbnb-select" name="country">
              <option value="all">All countries</option>
              <% if (typeof countries !== 'undefined') { %>
                <% countries.forEach(country => { %>
                  <option value="<%= country %>" <%= searchParams.country === country ? 'selected' : '' %>>
                    <%= country %>
                  </option>
                <% }) %>
              <% } %>
            </select>
          </div>
          
          <!-- Sort Options -->
          <div class="col-md-6">
            <h6 class="filter-section-title">Sort by</h6>
            <select class="airbnb-select" name="sortBy">
              <option value="newest" <%= searchParams.sortBy === 'newest' ? 'selected' : '' %>>Newest first</option>
              <option value="oldest" <%= searchParams.sortBy === 'oldest' ? 'selected' : '' %>>Oldest first</option>
              <option value="price-low" <%= searchParams.sortBy === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
              <option value="price-high" <%= searchParams.sortBy === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
            </select>
          </div>
        </div>
        
        <div class="filters-actions">
          <a href="/listings" class="clear-filters-btn">Clear all</a>
          <button type="submit" class="apply-filters-btn">Show places</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Airbnb-Style Results Header -->
<div class="container">
  <div class="results-header">
    <div class="results-info">
      <% if (typeof filteredCount !== 'undefined' && typeof totalListings !== 'undefined') { %>
        <h2 class="results-count"><%= filteredCount %> stays</h2>
        <p class="results-subtitle">
          <% if (searchParams.search) { %>
            in <%= searchParams.search %>
          <% } else { %>
            available
          <% } %>
        </p>
      <% } else { %>
        <h2 class="results-count">All stays</h2>
        <p class="results-subtitle">Discover unique places to stay</p>
      <% } %>
    </div>
    
    <div class="results-actions">
      <% if (searchParams.search || searchParams.country !== 'all' || searchParams.minPrice || searchParams.maxPrice) { %>
        <div class="active-filters">
          <% if (searchParams.search) { %>
            <span class="filter-tag">
              <i class="fas fa-map-marker-alt"></i>
              <%= searchParams.search %>
              <button class="remove-filter" onclick="removeFilter('search')">×</button>
            </span>
          <% } %>
          <% if (searchParams.country && searchParams.country !== 'all') { %>
            <span class="filter-tag">
              <i class="fas fa-globe"></i>
              <%= searchParams.country %>
              <button class="remove-filter" onclick="removeFilter('country')">×</button>
            </span>
          <% } %>
          <% if (searchParams.minPrice || searchParams.maxPrice) { %>
            <span class="filter-tag">
              <i class="fas fa-rupee-sign"></i>
              <% if (searchParams.minPrice && searchParams.maxPrice) { %>
                ₹<%= searchParams.minPrice %> - ₹<%= searchParams.maxPrice %>
              <% } else if (searchParams.minPrice) { %>
                ₹<%= searchParams.minPrice %>+
              <% } else { %>
                Up to ₹<%= searchParams.maxPrice %>
              <% } %>
              <button class="remove-filter" onclick="removeFilter('price')">×</button>
            </span>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Airbnb-Style Listings Grid -->
<div class="container">
  <% if (allListings.length === 0) { %>
    <!-- Empty State -->
    <div class="empty-state-container">
      <div class="empty-state-content">
        <div class="empty-state-icon">
          <i class="fas fa-map-marked-alt"></i>
        </div>
        <h3 class="empty-state-title">No exact matches</h3>
        <p class="empty-state-description">
          Try changing or removing some of your filters or adjusting your search area.
        </p>
        <div class="empty-state-actions">
          <a href="/listings" class="btn-airbnb-primary">Remove all filters</a>
          <button class="btn-airbnb-secondary" onclick="toggleAdvancedFilters()">Adjust search</button>
        </div>
      </div>
    </div>
  <% } else { %>
    <!-- Airbnb-Style Property Cards -->
    <div class="airbnb-listings-grid">
      <% for(let listing of allListings) { %>
        <div class="airbnb-listing-card">
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="listing-image-container">
              <img
                src="<%= listing.image.url %>"
                alt="<%= listing.title %>"
                class="listing-image"
                loading="lazy"
              />
              <button class="wishlist-btn" onclick="toggleWishlist(event, '<%= listing._id %>')">
                <i class="far fa-heart"></i>
              </button>
              <div class="listing-badge">
                <span class="superhost-badge">
                  <i class="fas fa-medal"></i>
                  Plus
                </span>
              </div>
            </div>
            
            <div class="listing-content">
              <div class="listing-header">
                <div class="listing-location">
                  <%= listing.location %>, <%= listing.country %>
                </div>
                <div class="listing-rating">
                  <i class="fas fa-star"></i>
                  <span>4.9</span>
                </div>
              </div>
              
              <h3 class="listing-title"><%= listing.title %></h3>
              
              <div class="listing-details">
                <span class="listing-type">Private room</span>
                <span class="listing-amenities">2-4 guests • 1 bedroom • 1 bed • 1 bath</span>
              </div>
              
              <div class="listing-pricing">
                <span class="listing-price">
                  <strong>₹<%= listing.price.toLocaleString("en-IN") %></strong>
                  <span class="price-period">night</span>
                </span>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<!-- Airbnb-Inspired CSS -->
<style>
