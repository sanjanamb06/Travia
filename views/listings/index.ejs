<% layout('/layouts/boilerplate') -%> 

<div class="container-fluid px-3">
  <% if(allListings.length === 0) { %>
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <h3 class="mt-5">No listings found</h3>
        <p class="text-muted">Be the first to add a listing!</p>
        <a href="/listings/create" class="btn btn-success">Add Listing</a>
      </div>
    </div>
  <% } else { %>
    <div class="row g-3">
      <% for(let listing of allListings){%>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none">
            <div class="card listing-card h-100">
              <img
                src="<%= listing.image.url %>"
                class="card-img-top"
                alt="<%= listing.title %>"
                loading="lazy"
              />
              <div class="card-body d-flex flex-column">
                <h6 class="card-title text-dark mb-2"><%= listing.title %></h6>
                <p class="card-text text-muted mb-2 flex-grow-1">
                  <i class="fas fa-map-marker-alt me-1"></i><%= listing.location %>
                </p>
                <p class="card-text fw-bold text-success mb-0">
                  &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                </p>
              </div>
            </div>
          </a>
        </div>
      <%}%>
    </div>
  <% } %>
</div>
