<% layout('/layouts/boilerplate') -%> 

<!-- Search and Filter Section -->
<div class="search-section mb-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="search-card p-4 bg-white rounded shadow-sm">
          <form action="/listings" method="GET" class="search-form">
            
            <!-- Main Search Bar -->
            <div class="row mb-3">
              <div class="col-md-8">
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-search"></i></span>
                  <input 
                    type="text" 
                    class="form-control" 
                    name="search" 
                    placeholder="Search by location, title, or description..." 
                    value="<%= searchParams.search || '' %>"
                  >
                </div>
              </div>
              <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                  <i class="fas fa-search me-2"></i>Search
                </button>
              </div>
            </div>

            <!-- Filters Row -->
            <div class="row g-3">
              <!-- Country Filter -->
              <div class="col-md-3">
                <label class="form-label">Country</label>
                <select class="form-select" name="country">
                  <option value="all">All Countries</option>
                  <% if (typeof countries !== 'undefined') { %>
                    <% countries.forEach(country => { %>
                      <option value="<%= country %>" <%= searchParams.country === country ? 'selected' : '' %>>
                        <%= country %>
                      </option>
                    <% }) %>
                  <% } %>
                </select>
              </div>

              <!-- Price Range -->
              <div class="col-md-3">
                <label class="form-label">Min Price (₹)</label>
                <input 
                  type="number" 
                  class="form-control" 
                  name="minPrice" 
                  placeholder="0" 
                  value="<%= searchParams.minPrice || '' %>"
                >
              </div>

              <div class="col-md-3">
                <label class="form-label">Max Price (₹)</label>
                <input 
                  type="number" 
                  class="form-control" 
                  name="maxPrice" 
                  placeholder="50000" 
                  value="<%= searchParams.maxPrice || '' %>"
                >
              </div>

              <!-- Sort By -->
              <div class="col-md-3">
                <label class="form-label">Sort By</label>
                <select class="form-select" name="sortBy">
                  <option value="newest" <%= searchParams.sortBy === 'newest' ? 'selected' : '' %>>Newest First</option>
                  <option value="oldest" <%= searchParams.sortBy === 'oldest' ? 'selected' : '' %>>Oldest First</option>
                  <option value="price-low" <%= searchParams.sortBy === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
                  <option value="price-high" <%= searchParams.sortBy === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
                </select>
              </div>
            </div>

            <!-- Filter Actions -->
            <div class="row mt-3">
              <div class="col-md-6">
                <a href="/listings" class="btn btn-outline-secondary">
                  <i class="fas fa-times me-2"></i>Clear Filters
                </a>
              </div>
              <div class="col-md-6 text-end">
                <button type="submit" class="btn btn-success">
                  <i class="fas fa-filter me-2"></i>Apply Filters
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Results Summary -->
<div class="container mb-3">
  <div class="results-summary">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h4 class="mb-0">
          <% if (typeof filteredCount !== 'undefined' && typeof totalListings !== 'undefined') { %>
            Showing <%= filteredCount %> of <%= totalListings %> properties
          <% } else { %>
            All Properties
          <% } %>
        </h4>
        <% if (searchParams.search) { %>
          <p class="text-muted mb-0">Results for "<%= searchParams.search %>"</p>
        <% } %>
      </div>
      <div class="col-md-4 text-end">
        <% if (allListings.length === 0) { %>
          <span class="badge bg-warning">No results found</span>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Listings Grid -->
<div class="container">
  <% if (allListings.length === 0) { %>
    <!-- No Results Message -->
    <div class="row justify-content-center">
      <div class="col-md-6 text-center">
        <div class="no-results p-5">
          <i class="fas fa-search fa-3x text-muted mb-3"></i>
          <h4>No properties found</h4>
          <p class="text-muted">Try adjusting your search criteria or <a href="/listings">view all properties</a></p>
        </div>
      </div>
    </div>
  <% } else { %>
    <!-- Listings Cards -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% for(let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none">
            <div class="card listing-card h-100">
              <img
                src="<%= listing.image.url %>"
                class="card-img-top"
                alt="<%= listing.title %>"
                loading="lazy"
              />
              <div class="card-body d-flex flex-column">
                <h6 class="card-title fw-bold"><%= listing.title %></h6>
                <p class="card-text text-muted small flex-grow-1">
                  <i class="fas fa-map-marker-alt me-1"></i>
                  <%= listing.location %>, <%= listing.country %>
                </p>
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <span class="price fw-bold text-primary">
                    ₹<%= listing.price.toLocaleString("en-IN") %>
                  </span>
                  <small class="text-muted">/night</small>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<!-- Enhanced CSS for Search -->
<style>
.search-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 2rem 0;
  margin: -20px -15px 2rem -15px;
}

.search-card {
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.2);
}

.results-summary {
  border-bottom: 2px solid #f8f9fa;
  padding-bottom: 1rem;
}

.no-results {
  background: #f8f9fa;
  border-radius: 12px;
}

.listing-card {
  transition: all 0.3s ease;
  border: none;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.listing-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.card-img-top {
  height: 200px;
  object-fit: cover;
}

@media (max-width: 768px) {
  .search-section {
    margin: -20px -15px 1rem -15px;
    padding: 1rem 0;
  }
  
  .card-img-top {
    height: 180px;
  }
}
</style>
